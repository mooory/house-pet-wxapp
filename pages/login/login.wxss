page{
    background: white;
}

.login-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 152rpx;
    font-size: 32rpx;
}

.app-icon {
    width: 156rpx;
    height: 186rpx;
}

.login-info {
    margin-top: 47px;
    height:76rpx;
    font-size:32rpx;
    font-family:PingFangSC-Medium;
    font-weight:bold;
    color:rgba(0,0,0,1);
    line-height: 80rpx;
    text-align: center;
}

.line {
  background: linear-gradient(to right, #FA3252, #A545A1);
  height: 6rpx;
  width: 102rpx;
  margin-bottom: 80rpx;
}

.form {
  width: 100%;
}

.item-number {
  border-bottom: 1px solid #ddd;
  margin:0 28rpx 38rpx 28rpx;
  padding-left: 86rpx;
  position: relative;
  height: 70rpx;
}

.item-number>image {
  height: 48rpx;
  width: 30rpx;
  position: absolute;
  left:32rpx;
}

.item-verify {
  margin:0 28rpx 38rpx 28rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.left24 {
    padding-left: 36rpx;
    border-bottom: 1px solid #ddd;
}

.input {
    line-height: 70rpx;
    height: 80rpx;
    width: 400rpx;
}

.input-placeholder {
    font-family:PingFangSC-Regular!important;
    font-weight:400;
    color:rgba(155,155,155,1);
}

.verify-button {
    background:linear-gradient(90deg,rgba(250,50,82,1) 0%,rgba(165,69,161,1) 100%);
    border-radius:44rpx;
    color:#fff;
    font-size: 32rpx;
    margin: 0px;
}
.verify-button[disabled] {
    background: linear-gradient(90deg,rgba(250,50,82,0.6) 0%,rgba(165,69,161,0.6) 100%);
    color:#454545!important;
}
.login-btn {
    margin:68rpx 28rpx 0 28rpx;
    background:linear-gradient(90deg,rgba(250,50,82,1) 0%,rgba(165,69,161,1) 100%);
    border-radius:44rpx;
    color:#fff;
    font-family:PingFangSC-Regular;
    font-weight:400;
    font-size: 32rpx;
}

