/* pages/light/light.wxss */
@import '../../components/head.wxss';
.block {
  display: flex;
  justify-content: space-between;
  align-items: center; 
}
.border-gray {
  border-bottom: 2rpx solid #F0F2F5;
}
.block-title {
  height: 40rpx;
  padding: 24rpx 20rpx;
  display: flex;
  align-items: center;
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(74,74,74,1);
  line-height: 44rpx;
  /* border-bottom: 2rpx solid #F0F2F5; */
}

.line {
  background: linear-gradient(to bottom, #FA3252, #A545A1);
  height: 38rpx;
  width: 10rpx;
  display: inline-block;
  margin-right: 18rpx;
}

/*
 * 滑动按钮的样式
 */
.switch {
  position: relative;
  width: 88rpx;
  height: 44rpx;
  margin-right: 32rpx;
}
.switch .switch-check {
  display: none;
}
.slide {
  position: absolute;
  width:88rpx;
  height:44rpx;
  background:rgba(255,255,255,1);
  border-radius:32rpx;
  border:1px solid rgba(216,216,216,1);
  top:0;
  bottom: 0;
  right: 0;
  left: 0;
  transition: 0.4s;
  -webkit-transition: 0.4s;
}
.slide::before {
  position: absolute;
  content: ' ';
  width:56rpx;
  height:56rpx;
  background:linear-gradient(180deg,rgba(252,252,252,1) 0%,rgba(247,247,247,1) 100%);
  box-shadow:0px 2px 4px 0px rgba(216,216,216,1);
  border:1px solid rgba(216,216,216,1);
  border-radius: 50%;
  top: -8rpx;
  left: -14rpx;
}
.slide-color {
  background: linear-gradient(to right, #FA3252, #A545A1);
}
.slide-color::before {
  transform: translateX(58rpx);
}

/*
 * 四个切换键的样式
 */
.four-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 140rpx;
  border-bottom: 20rpx solid #F0F2F5;
}
.item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size:12px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.normal-line {
  width: 4rpx;
  height: 27rpx;
  display: inline-block;
}
.gray-line {
  background: #F0F2F5;
}
.icon1 {
  width: 44rpx;
  height: 36rpx;
  margin-bottom: 14rpx;
}
.icon2 {
  width: 24rpx;
  height: 42rpx;
  margin-bottom: 8rpx;
}
.icon3 {
  width: 44rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}
.icon4 {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 6rpx;
}

.canvas-container {
  display: flex;
  justify-content: center;
  padding-top:40rpx;
  padding-bottom: 20rpx;
}