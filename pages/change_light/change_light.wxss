.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 90;
  opacity: 0.6;
}
 
.modalDlg {
  width: 604rpx;
  height: 430rpx;
  position: fixed;
  top: 528rpx;
  left: 80rpx;
  z-index: 99;
  background-color: #fff;
  border-radius: 18rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}
 
.close_mask {
  color: #000;
  position: relative;
  left: 40%;
  /* top: -82%; */
  font-size: 32rpx;
}

.modal-title {
  font-size:28rpx;
  /* font-family:PingFangSC-Regular; */
  font-weight:400;
  color:rgba(28,40,51,1);
  display: flex;
  align-items: center;
  margin-bottom: 50rpx;
}
.circle {
  width: 50rpx;
  height: 50rpx;
  margin-right: 40rpx;
}
.color-container {
  width: 100%;
  display: flex;
  justify-content: space-around;
  margin-bottom: 32rpx;
}
.last-color-container {
  width: 121rpx;
  display: flex;
  justify-content: space-between;
}
.color-item {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  color:#FFF;
  text-align: center;
  vertical-align: center;
  font-size: 12px;
  position: relative;
}
.showOutCircle {
  position: absolute;
  left: -4px;
  top: -4px;
  width: 24px;
  height: 24px;
  border-radius: 50%;
  border-width: 2px;
  border-color: #fff;
  border-style: solid;
}
.showTick {
  color: #000;
  position: absolute;
  left: 7px;
  top: 2px;
  width: 4px;
  height: 10px;
  border-width: 0 2px 2px 0;
  transform: rotate(45deg);
  border-color: #fff;
  border-style: solid;
}

.confirm-btn {
    margin:40rpx 28rpx;
    background:linear-gradient(90deg,rgba(250,50,82,1) 0%,rgba(165,69,161,1) 100%);
    border-radius:44rpx;
    color:#fff;
    font-family:PingFangSC-Regular;
    font-weight:400;
    font-size: 32rpx;
}

.btn-hover {
    opacity: 0.7;
}