  display: flex;
  align-items: center;
  padding: 0 16rpx;
  height: 100%;
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: bold;
  color:rgba(0,0,0,1);
  border-bottom: 4rpx solid #FB3353;
}

