@import '../../components/head.wxss';

.item-container {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 112rpx;
  /* border-bottom: 20rpx solid #F0F2F5; */
  box-shadow:0px 2px 10px 0px rgba(216,216,216,1);
