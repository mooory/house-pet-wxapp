/* pages/addPet/addPet.wxss */
@import '../../components/head.wxss';
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 14rpx;
  font-size: 32rpx;
}
.info-message {
  width: 472rpx;
  height: 68rpx;
  box-shadow:0px 2px 8px 0px rgba(0,0,0,0.2);
  border-radius:4px;
  font-size: 24rpx;
  font-weight:400;
  text-align: center;
  font-family:PingFangSC-Regular;
  color:rgba(102,102,102,1);
  line-height: 68rpx;
  margin-bottom: 24rpx;
}
.info-message>icon {
  margin-right: 18rpx;
  position: relative;
  top: 10rpx;
  /* padding-top: 20rpx; */
}
.avatar {
  height:194rpx;
  width:194rpx;
  overflow: hidden;
  border-radius: 50%;
  position: relative;
}
.avatar>image {
  width:100%;
  height: 100%;
}

.avatar-text {
  position: absolute;
  top: 150rpx;
  left: 0;
  height: 64rpx;
  width: 100%;
  background:rgba(255,255,255,1);
  opacity:0.8292;
  text-align: center;
  line-height: 40rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  color:#9B9B9B;
}

.form {
  width: 100%;
  padding-top: 140rpx;
}

.item {
  border-bottom: 1px solid #ddd;
  margin:0 28rpx 38rpx 28rpx;
  padding-left: 86rpx;
  position: relative;
  height: 70rpx;
}

.item>image {
  height: 32rpx;
  width: 32rpx;
  position: absolute;
  left:32rpx;
  top: 10rpx;
}

.input-placeholder {
    font-family:PingFangSC-Regular!important;
    font-weight:400;
    color:rgba(155,155,155,1);
}

.picker-container {
  color: rgba(155,155,155,1);
  font-weight:400;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.picker-container>image {
  width: 28rpx;
  height: 16rpx;
  margin: 16rpx 8rpx 0 0;
}
.choose {
  color: #666666;
  font-weight: normal;
}

.confirm-btn {
    margin:68rpx 28rpx 0 28rpx;
    background:linear-gradient(90deg,rgba(250,50,82,1) 0%,rgba(165,69,161,1) 100%);
    border-radius:44rpx;
    color:#fff;
    font-family:PingFangSC-Regular;
    font-weight:400;
    font-size: 32rpx;
}

.btn-hover {
    opacity: 0.7;
}