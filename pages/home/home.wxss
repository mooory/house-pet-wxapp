/* pages/home/home.wxss */
@import '../../components/head.wxss';

.bg {
  width: 100%;
  height: calc(100vh - 132rpx);
  position: fixed;
  overflow:hidden;
  z-index: -1; 
  background-size: 100% 100%; 
}

.home-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 32rpx;
}

.add-item {
  width:110rpx;
  height:110rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 10px 0px rgba(216,216,216,1);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(254,181,192,1);
  line-height:14px;
  margin-top: 68rpx;
  margin-bottom: 56rpx;
}

.add-item>image {
  margin-top: 8rpx;
  width: 32rpx;
  height: 32rpx;
}

.line {
  background: linear-gradient(to right, #FA3252, #A545A1);
  height: 4rpx;
  width: 160rpx;
  margin-bottom: 492rpx;
}

.info {
  font-size:14px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(155,155,155,1);
  line-height:20px;
  margin-bottom: 134rpx;
}


.add-button{
  width:154rpx;
  height:50rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 4px 0px rgba(216,216,216,1);
  border-radius: 32rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color:rgba(251,51,83,1);
  line-height: 50rpx;
  text-align: center;
}

.add-icon {
  width: 18rpx;
  height: 18rpx;
  margin-right: 6rpx;
}

.swiper {
  width: 100%;
  height: 236rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 0px 0px rgba(0,0,0,0.05);
}

.swiper-item-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.swiper-item {
  width: 160rpx;
  height: calc(100% - 4rpx);
  padding-top: 12rpx;
  border-bottom: 4rpx solid #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: 0.6s;
}
.swiper-image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  opacity: 0.6;
  transition: all 0.3s;
  border: 1px solid rgba(216,216,216,1);
}

.choose-item {
  border-bottom: 4rpx solid #FB3353;
}
.choose-item>.swiper-image {
  opacity: 1;
  height: 146rpx;
  width: 146rpx;
  box-shadow:0px 2px 10px 0px rgba(216,216,216,1);
}

.device-container {
  position: relative;
  width: 100%;
}

.device-name {
  margin: 52rpx 0 10rpx 0;
  font-size:18px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(33,36,62,1);
  line-height:50rpx;
  width: 100%;
  text-align: center;
}

.device-container>.add-button {
  position: absolute;
  top: 54rpx;
  right: 46rpx;
  z-index: 5;
}

.tips {
  margin: 200rpx 0;
  text-align: center;
  color: rgb(190, 187, 187);
}
.canvas-container {
  height: 100vw;
  width: 100%;
}
.swiper-container {
  /* height: calc(100vw + 112rpx); */
  height: 100vw;
}
ec-canvas {
  width: 100%;
  height: 100%;
}

.canvastoimage {
  position: absolute;
  width: 100%;
  height: 100%;
}
.light-power {
  width: 100%;
  height: 69.3vw;
}
.light-container {
  position: relative;
  width: 100%;
  /* height: 100vw; */
  height: 80vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.unlock-container {
  z-index: 5;
  width: 142rpx;
  height: 142rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(#A545A1,#FA3252);
  border-radius: 50%;
}
.lock-container {
  z-index: 5;
  width: 142rpx;
  height: 142rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: white;
  box-shadow:0px 0px 30px 0px #D8D8D8;
  border-radius: 50%;
}
.lock {
  width: 64rpx;
  height: 72rpx;
}
.tolight-container{
  position: relative;
  top: -96rpx;
  /* text-align: center; */
  display: flex;
  justify-content: center;
}
.tolight {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background:linear-gradient(90deg,rgba(250,50,82,1) 0%,rgba(165,69,161,1) 100%);
  border-radius:200rpx;
  color: white;
  text-align: center;
  font-size: 32rpx;
}
.gray {
  background:rgba(216,216,216,1);
}
.tolight-image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 28rpx;
  vertical-align: -10rpx;
}

.ble-test-button{
  margin: 0 auto;
  margin-top: 100px;
  width:80%;
  height:50rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 4px 0px rgba(216,216,216,1);
  border-radius: 32rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color:rgba(251,51,83,1);
  line-height: 50rpx;
  text-align: center;
}